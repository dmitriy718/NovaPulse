# ============================================
# NovaPulse - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# Environment: development | production
APP_ENV=development

# ---- Kraken API ----
KRAKEN_SANDBOX=true
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# ---- Trading Mode ----
# Options: paper, live
TRADING_MODE=paper
# Start in paused mode (no new trades) until manually resumed via control endpoint/Telegram.
# Useful when rotating API keys or doing maintenance. Set to 0/false to disable.
START_PAUSED=0

# ---- Exchange Selection ----
# Options: kraken, coinbase
ACTIVE_EXCHANGE=kraken
# Multi-exchange (comma-separated). Overrides ACTIVE_EXCHANGE when set.
TRADING_EXCHANGES=
EXCHANGE_REST_URL=
EXCHANGE_WS_URL=
EXCHANGE_MAKER_FEE=
EXCHANGE_TAKER_FEE=
EXCHANGE_POST_ONLY=false
CANDLE_POLL_SECONDS=60

# ---- Risk Parameters ----
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05
MAX_POSITION_USD=500.0
INITIAL_BANKROLL=10000.0

# ---- Telegram Bot (Optional) ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_CHAT_IDS=
# Polling must only be enabled on a single instance across all deployments; otherwise Telegram returns 409.
# Default to send-only.
TELEGRAM_POLLING_ENABLED=false

# ---- Coinbase Advanced Trade (Optional) ----
COINBASE_SANDBOX=true
COINBASE_ORG_ID=
COINBASE_KEY_ID=
COINBASE_KEY_NAME=
COINBASE_PRIVATE_KEY_PATH=
COINBASE_MARKET_DATA_URL=

# ---- Dashboard ----
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8080
# Docker compose host binding. Use 127.0.0.1:8090 for localhost-only, or 0.0.0.0:8090 to expose publicly.
HOST_PORT=127.0.0.1:8090
# Read access (CLI/automation). Optional if you use the web login session.
DASHBOARD_READ_KEY=
# Admin/control (pause/resume/close_all). Required for live mode.
DASHBOARD_ADMIN_KEY=
# Cookie session signing secret for the web dashboard (required in production/live).
DASHBOARD_SESSION_SECRET=

# Web dashboard admin login (recommended: use *HASH* and do not set plaintext).
DASHBOARD_ADMIN_USERNAME=admin
DASHBOARD_ADMIN_PASSWORD=
# Argon2 hash (preferred). Generate via: `python scripts/gen_password_hash.py "your password"`
DASHBOARD_ADMIN_PASSWORD_HASH=

# Require auth for read endpoints and WebSocket.
DASHBOARD_REQUIRE_AUTH_FOR_READS=true

# Allowed origins for browsers (comma-separated). Leave empty for localhost-only defaults.
DASHBOARD_CORS_ORIGINS=

# ---- Docker Build ----
# Which requirements file Docker should install during image build.
REQUIREMENTS_FILE=requirements.txt

# ---- Billing (Stripe) - optional for SaaS / licensing ----
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# ---- Encryption ----
VAULT_PASSWORD=

# ---- Logging ----
LOG_LEVEL=INFO

# ---- Model ----
MODEL_RETRAIN_INTERVAL_HOURS=168
MIN_TRAINING_SAMPLES=10000

# ---- Database ----
DB_PATH=data/trading.db
